{
  "name": "toothpick",
  "private": true,
  "version": "0.0.1",
  "description": "基于 websocket 的 debug 服务",
  "main": "index.js",
  "scripts": {
    "start": "concurrently --kill-others \"npm:start:*\"",
    "start:boss": "pnpm -C ./packages/boss start",
    "start:server": "pnpm -C ./packages/server start",
    "start:user": "pnpm -C ./packages/user start",
    "pi": "pnpm install -no-frozen-lockfile",
    "clean": "rimraf **/node_modules **/package-lock.json",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install && echo 'export PATH=\"/usr/local/bin/:$PATH\"' >> ~/.huskyrc"
  },
  "keywords": [],
  "author": "Woshiajuana",
  "license": "MIT",
  "engines": {
    "node": ">= 14.16.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "commitizen": "^4.2.4",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "husky": "^7.0.4",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "concurrently": "^7.6.0",
    "rimraf": "^3.0.2"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --fix"
  }
}
