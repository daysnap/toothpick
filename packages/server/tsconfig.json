{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "es",
    "jsx": "preserve",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "src": ["./src/"],
      "src/*": ["./src/*"],
    }
  },
  "include": ["src/**/*.ts", "typings/**/*.d.ts"]
}
